<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <div class="jumbotron">
        <h3>
          Welcome to <span class='brand'>FAKE Burgers!</span> Home of the Fake Burgers!
        </h3>
        <h5>May I take your Order Please!!</h5>
      </div>
    </div>
  </div>

  <div class="row ">
    <div class="col-12-sm create-burger-form">
      <form>
        <label for="burger_name"></label>
        <input type="text" class="form-control" placeholder="Enter your favorite burger" id="burger_name">
        <button type="submit" class="btn btn-primary form-button" id="text-enter-button">Order Burger</button>
      </form>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 text-center">
      <ul>
        {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-sm-6 text-center">
      <ul>
        {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>







</div>