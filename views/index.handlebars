<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1>Burgers</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-6 text-center">
      <ul>
        {{#each burgers}} {{#unless eaten}} {{> burgers/burger-block eat=true}} {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-sm-6 text-center">
      {{!--
      <h2>No More Burgers SON!</h2> --}}

      <ul>
        {{#each burgers}} {{#if eaten}} {{> burgers/burger-block eat=false}} {{/if}} {{/each}}
      </ul>
    </div>
  </div>

  <div class="row ">
    <div class="col-12-sm create-burger-form">
      <form >

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
          <button type="submit">Add Burger</button>
        </div>
        
      </form>
    </div>
  </div>
</div>

